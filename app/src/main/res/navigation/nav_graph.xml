<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.disneyapp.ui.characters.DisneyFragment"
        android:label="Disney Characters"
        tools:layout="@layout/fragment_disney">
        <action
            android:id="@+id/action_charactersFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.disneyapp.ui.characters.details.CharactersDetails"
        android:label="Details"
        tools:layout="@layout/fragment_characters_details"/>

</navigation>